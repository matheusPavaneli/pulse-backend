<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{{subject}}</title>
    <style>
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f6f8;
        color: #333;
        margin: 0;
        padding: 0;
      }
      .email-wrapper {
        width: 100%;
        padding: 20px 0;
        background-color: #f4f6f8;
      }
      .container {
        max-width: 600px;
        margin: auto;
        background-color: #ffffff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
      }
      .header {
        background-color: #0052cc;
        padding: 25px;
        text-align: center;
        color: #ffffff;
      }
      .header img {
        max-width: 120px;
        margin-bottom: 10px;
      }
      .header h1 {
        font-size: 26px;
        margin: 0;
        font-weight: 600;
      }
      .content {
        padding: 35px 30px;
        font-size: 16px;
        line-height: 1.7;
        color: #555;
      }
      .content p {
        margin-bottom: 20px;
      }
      .button {
        display: inline-block;
        padding: 14px 28px;
        background-color: #0052cc;
        color: #fff;
        text-decoration: none;
        border-radius: 6px;
        font-weight: bold;
        transition: background-color 0.3s ease;
      }
      .button:hover {
        background-color: #003d99;
      }
      .footer {
        font-size: 12px;
        color: #999;
        padding: 20px 30px;
        text-align: center;
        background-color: #f1f1f1;
      }
      .footer a {
        color: #0052cc;
        text-decoration: none;
      }
      @media screen and (max-width: 620px) {
        .container {
          width: 90%;
        }
        .content {
          padding: 25px 20px;
        }
      }
    </style>
  </head>
  <body>
    <div class="email-wrapper">
      <div class="container">
        <div class="header">
          <img src="https://yourcompany.com/logo.png" alt="Company Logo" />
          <h1>{{subject}}</h1>
        </div>
        <div class="content">
          <p>{{{message}}}</p>
          <a href="{{action_link}}" class="button">View Details</a>
        </div>
        <div class="footer">
          This email was automatically generated by Pulse Observability. Please do not reply.<br/>
          <a href="https://yourcompany.com">Visit our website</a> | <a href="mailto:support@yourcompany.com">Support</a>
        </div>
      </div>
    </div>
  </body>
</html>
